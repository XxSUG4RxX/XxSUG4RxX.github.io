---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
            ul li img {
                width: 100%;
                aspect-ratio: 1 / 1;
            }

            @keyframes spin {
            from {
            transform: rotate(0deg);
            }
             to {
            transform: rotate(360deg);
            }
    }

    .spin {
        animation: spin 15s linear infinite;
    }
    @media (min-width: 1024px) {
        .spin:hover {
            animation-duration: 1s;
        }
    }
            
        </style>
    </head>
    <body class="bg-black">
        <Header />
        <main class="text-green">
            <section>
				<h2 class="flex justify-center items-center my-10">PROJETS</h2>
				<ul class="grid grid-cols-1 lg:grid-cols-3 gap-8 mx-8">
                    {
                        posts.map((post) => (
                            <li class="w-full ">
                                <a href={`/blog/${post.slug}/`} class="w-full">
                                <div class="">
                                    <img class="border-4 border-green rounded-full spin" src={post.data.heroImage} alt={post.data.title}/>
                                </div>
                                </a>
                                <p class="text-center mt-4 text-2xl">{post.data.title}</p>
                            </li>
                        ))
                    }
                </ul>
            </section>
        </main>
        <Footer />
    </body>
</html>